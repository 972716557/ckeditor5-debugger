{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@ckeditor/*": ["../ckeditor5-master/packages/*/src"]
    }
  },
  "include": [
    "src/**/*",
    "../ckeditor5-master/packages/**/*"
  ],
  "exclude": ["node_modules"]
}